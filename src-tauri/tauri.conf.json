{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipboardwatcher",
  "version": "0.1.0",
  "identifier": "com.hyukmac.clipboardwatcher",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "clipboardwatcher",
        "width": 900,
        "height": 700,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "resizable": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
